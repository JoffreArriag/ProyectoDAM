<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/infoProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grupo #2\nAplicación para el sector agrícola\nUsuario/contraseña: admin"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/iniciarsesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoProyecto"
            android:layout_marginTop="40dp"
            android:text="Iniciar Sesión"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iniciarsesion"
            android:layout_marginTop="24dp"
            android:background="#30ffffff"
            android:hint="Usuario"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/baseline_group_24"
            android:drawablePadding="16dp" />

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usuario"
            android:layout_marginTop="16dp"
            android:background="#30ffffff"
            android:hint="Contraseña"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/baseline_key_24"
            android:drawablePadding="16dp"
            android:inputType="textPassword" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contraseña"
            android:layout_marginTop="24dp"
            android:text="Iniciar Sesión"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginbtn"
            android:layout_marginTop="12dp"
            android:text="Crear Cuenta"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/olvidémicontraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCrearCuenta"
            android:layout_marginTop="16dp"
            android:text="Olvidé mi contraseña"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/iconos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/olvidémicontraseña"
            android:layout_marginTop="40dp"
            android:text="o iniciar sesión con"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/redessociales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconos"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/googlebtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:src="@drawable/google" />

            <ImageView
                android:id="@+id/facebookbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:src="@drawable/facebook" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
